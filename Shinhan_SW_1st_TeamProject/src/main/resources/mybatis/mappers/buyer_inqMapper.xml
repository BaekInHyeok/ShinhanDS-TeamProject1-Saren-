<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saren.buyer_inq">

	<!-- 상품ID의 전체 문의 목록 조회 -->
	<select id="selectByProdId" parameterType="string"
		resultType="buyer_inqVO">
		SELECT * 
		FROM BUYER_INQ 
		WHERE prod_id = #{prod_id}
	</select>

	<select id="selectByInqId" parameterType="int"
		resultType="buyer_inqVO">
		SELECT * 
		FROM BUYER_INQ 
		WHERE "buyer_inq_id" = #{buyer_inq_id}
	</select>
	
	<select id="selectByMemberId" parameterType="string"
		resultType="buyer_inqVO">
		SELECT *
		FROM BUYER_INQ 
		WHERE "member_id" = #{member_id}
	</select>

	<select id="selectAll" resultType="buyer_inqVO">
		SELECT *
		FROM BUYER_INQ
	</select>

	<!-- 구매자 : 상품 문의, buyer_inq_id 시퀀스 사용함 -->
	<insert id="buyer_inqInsert" parameterType="map">
		INSERT 
		INTO BUYER_INQ(buyer_inq_id, 
					   buyer_inq_title, 
					   buyer_inq_content, 
					   buyer_inq_date, 
					   buyer_reply, 
					   member_id,
					   prod_id, 
					   buyer_reply_date) 
		VALUES(
			buyer_inq_sequence.nextval, 
			#{buyer_inq_title}, 
			#{buyer_inq_content},  
		    SYSDATE, 
		    NULL, 
		    #{member_id},
		    #{prod_id}, 
		    NULL
		    )
	</insert>

	<update id="buyer_inqUpdate" parameterType="buyer_inqVO">
		UPDATE BUYER_INQ
		SET
		"buyer_inq_title" = #{buyer_inq_title}, "buyer_inq_content" = #{buyer_inq_content}, 
		"buyer_inq_date" = #{buyer_inq_date}, "buyer_reply" = #{buyer_reply}, 
		"member_id" = #{member_id}, "prod_id" = #{prod_id}, 
		"buyer_reply_date" = #{buyer_reply_date}, "email" = #{email}
		WHERE "buyer_inq_id" = #{buyer_inq_id}
	</update>

	<delete id="buyer_inqDelete" parameterType="int">
		DELETE
		FROM BUYER_INQ
		WHERE "buyer_inq_id" = #{buyer_inq_id}
	</delete>
	
</mapper>
