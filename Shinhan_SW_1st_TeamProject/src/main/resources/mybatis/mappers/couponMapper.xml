<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saren.coupon">

	<!-- 쿠폰상세 -->
	<select id="couponSelectById" parameterType="int" resultType="couponVO">
		SELECT *
		FROM COUPON
		WHERE coupon_id = #{coupon_id}
	</select>

	<!-- 쿠폰목록 -->
	<select id="selectAll" resultType="couponVO">
		SELECT *
		FROM COUPON
	</select>
	
	<!-- 고객이 가지고 있는 쿠폰 목록 -->
	<select id="selectCustomerCouponList" parameterType="string" resultType="couponVO">
		SELECT *
		FROM COUPON
		WHERE member_id=#{member_id}
	</select>
	
	<!-- 쿠폰사용 -->
 	<update id="couponUse" parameterType="couponVO">
		UPDATE COUPON
		SET
		quantity=#{quantity}
		WHERE coupon_id = #{coupon_id} AND member_id = #{member_id}
	</update>
</mapper>